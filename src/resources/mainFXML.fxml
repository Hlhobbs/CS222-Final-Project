<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="275.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <children>


    <Label text="Image Viewer">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
      <font>
         <Font name="System Bold" size="26.0" />
      </font>
    </Label>

    <!-- -->
    <HBox fx:id="buttonHBox" alignment="TOP_CENTER" prefHeight="30.0" prefWidth="600.0">
        <Button fx:id="FileButton" alignment="CENTER" mnemonicParsing="false" onAction="#Controller" text="Choose an Image!">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin></Button>
    </HBox>

   <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <Label minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="320.0" text="Type the minimmum uses of a color to be displayed:" wrapText="true">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </Label>
       <TextField fx:id="minimumUsesTextField" alignment="TOP_LEFT" prefHeight="25.0" prefWidth="50.0">
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin></TextField>
   </HBox>


   <HBox alignment="BOTTOM_CENTER" prefHeight="60.0" prefWidth="200.0">
      <children>
         <Label alignment="CENTER" contentDisplay="CENTER" minHeight="-Infinity" prefHeight="100.0" prefWidth="380.0" text="NOTE: You may only select from .JPG, .PNG, and .GIF files. However, please do not choose a .GIF image that moves. This program does not support those files." textAlignment="CENTER" wrapText="true">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin></Label>
      </children>
   </HBox>

    </children>
</VBox>
