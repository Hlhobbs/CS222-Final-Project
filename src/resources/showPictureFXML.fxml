<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane fx:id="pane" />
      <HBox prefHeight="200.0" prefWidth="500.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="250.0" spacing="10.0">
               <children>
                  <Label prefHeight="46.0" prefWidth="245.0" text="Seach for the color at a specific pixel in the image" wrapText="true">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <TextField promptText="Enter an X coordinate" fx:id="xCoor" />
                  <TextField fx:id="yCoor" promptText="Enter an Y coordinate" />
                  <Button fx:id="button" mnemonicParsing="false" text="Search" />
                  <Label fx:id="ExceptionLabel" prefHeight="34.0" prefWidth="225.0" wrapText="true" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox fx:id="imageBox" prefHeight="200.0" prefWidth="250.0" spacing="10.0">
               <children>
                  <Label fx:id="hexLabel">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <ImageView fx:id="thumbView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </ImageView>
               </children>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></VBox>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin></HBox>
   </children>
</VBox>
