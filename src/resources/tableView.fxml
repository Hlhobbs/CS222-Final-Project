<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="root" alignment="CENTER" spacing="10.0">
         <TableView fx:id="tableView">
           <columns>

               <!-- Hexadecimal column -->
               <TableColumn fx:id="hexCol" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Hexadecimal color codes">
                   <cellValueFactory>
                       <PropertyValueFactory property="hex" />
                   </cellValueFactory>
               </TableColumn>

               <!-- Thumbnail column -->
               <TableColumn fx:id="thumbnailCol" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Thumbnail">
                   <cellValueFactory>
                       <PropertyValueFactory property="hex" />
                   </cellValueFactory>
                   <!-- Custom CellFactory contained within Controller class -->
               </TableColumn>

               <!-- Count column -->
               <TableColumn fx:id="countCol" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Uses of each color">
                   <cellValueFactory>
                       <PropertyValueFactory property="count" />
                   </cellValueFactory>
               </TableColumn>

           </columns>
         </TableView>
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
      </HBox>
      <VBox>
         <children>
              <Label fx:id="totalDistinctColors" prefHeight="25.0" prefWidth="200.0" text="Number of displayed colors" wrapText="true">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="10.0" />
               </font></Label>

                   <HBox spacing="10">
               <TabPane fx:id="tabPane" prefHeight="400.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                 <tabs>
                   <Tab fx:id="compTab" text="Comp Colors">
                        <content>
                           <VBox fx:id="box">
                              <children>
                                 <Label fx:id="compLabel" minWidth="100.0" prefWidth="100.0" text="Hex Value:" textAlignment="CENTER">
                                    <padding>
                                       <Insets left="10.0" />
                                    </padding>
                                 </Label>
                                 <ImageView fx:id="compView" fitHeight="100.0" fitWidth="100.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" />
                              </children>
                           </VBox>
                        </content>
                   </Tab>
                   <Tab text="Untitled Tab 2" />
                 </tabs>
               </TabPane>
             </HBox>
         </children>
      </VBox>
   </children>
</HBox>
